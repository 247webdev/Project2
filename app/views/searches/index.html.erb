<!-- nav bar partial -->
<div class="container text-center page-background-color page-sizing">
<h1>Search Profiles</h1>

<%= form_tag("/searches/results", method: "post", class: "form-inline") do %>

  <% unless session[:user_id] %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p>What is your ZIP code?&nbsp;
        <%= text_field_tag(:zipcode, nil, placeholder: "Your Zip Code")%>
        </p>
      </div>
    </div>
  <% end %>

  <!-- <div class="row"> -->
  <div class="text-center">
    <!-- <div class="col-md-6"> -->
    <p>
      What category of items are you interested in?&nbsp;
      <%= select_tag(:category, options_for_select([
          ['Time', "Time"],
          ['Service', "Service"],
          ['Money', "Money"],
          ['Object', "Object"]
         ], "Time")) %>
        </p>
    <!-- </div> -->
    <!-- <div class="col-md-6"> -->
    <p>
      How far away can it be?&nbsp;
      <%= select_tag(:radius, options_for_select([
          ['Distance is not applicable', 5000], 
          ['Up to 1 mile', 1], 
          ['Up to 2 miles', 2], 
          ['Up to 3 miles', 3], 
          ['Up to 4 miles', 4], 
          ['Up to 5 miles', 5], 
          ['Up to 6 miles', 6], 
          ['Up to 7 miles', 7], 
          ['Up to 8 miles', 8], 
          ['Up to 9 miles', 9], 
          ['Up to 10 miles', 10], 
          ['Up to 15 miles', 15], 
          ['Up to 20 miles', 20], 
          ['Up to 30 miles', 30], 
          ['Up to 50 miles', 50]
          ], 7000)) %>
          </p>
    <!-- </div> -->
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 submit-button">
      <%= submit_tag("Search")%>
    </div>
   
  </div>

<% end %>
<div id="loading">
  <span>LOADING</span>
</div>

</div>
</div>
</div>