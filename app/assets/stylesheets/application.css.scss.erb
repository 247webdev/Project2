.hero-heading button{
  width: 310px;
  height: 56px;
  border-radius: 100px;
  font-size: 1.75em;
  color: #333333;
  font-family: Lato, sans-serif;

  background: #ffffff; /* Old browsers */
  background: -moz-linear-gradient(top,  #ffffff 0%, #cbcbcb 99%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(99%,#cbcbcb)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #ffffff 0%,#cbcbcb 99%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #ffffff 0%,#cbcbcb 99%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #ffffff 0%,#cbcbcb 99%); /* IE10+ */
  background: linear-gradient(to bottom,  #ffffff 0%,#cbcbcb 99%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#cbcbcb',GradientType=0 ); /* IE6-9 */
}

